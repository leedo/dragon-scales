#!/usr/bin/env perl

use v5.14;

use Getopt::Long;
use DB::rrdcached;
use Twiggy::Server;
use Plack::Builder;

my $dir;
my %twiggy = (host => "0.0.0.0", port => 5000);

GetOptions(
  "cachedir=s" => \$dir,
  "listen=s" => \($twiggy{listen}),
  "port=s"   => \($twiggy{port}),
  "host=s"   => \($twiggy{host}),
);

my $rrdcached = DB::rrdcached->new($dir);

my $app = builder {
  mount "/dragon" => sub {
    my $env = shift;
    sub {
      my $respond = shift;
      $rrdcached->handle->cb(sub {
        eval { my $h = shift->recv };

        if ($@) {
          $respond->([500, ["Content-Type", "text/plain"], [$@]]);
          return;
        }

        $respond->([200, ["Content-Type", "text/plain"], ["ok"]]);
      });
    };
  };
};

Twiggy::Server->new(%twiggy)->run($app);
